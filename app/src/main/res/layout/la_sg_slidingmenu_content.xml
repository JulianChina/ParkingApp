<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/menu_logon_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:onClick="menuClickListener">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_person_logon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_logon_text"
            android:textSize="20sp"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/menu_divider1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/menu_logon_layout"
        android:layout_marginLeft="50dp"
        android:background="@color/sg_divider_color"/>

    <LinearLayout
        android:id="@+id/menu_wallet_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/menu_divider1"
        android:onClick="menuClickListener"
        android:background="@drawable/selector_ripple_item">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu_material"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_wallet_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@color/f850_default_blue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_coupon_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_licence_plate_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/menu_wallet_layout"
        android:onClick="menuClickListener"
        android:background="@drawable/selector_ripple_item">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_material" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_licence_plate_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_order_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/menu_licence_plate_layout"
        android:background="@drawable/selector_ripple_item"
        android:onClick="menuClickListener">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_material"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_order_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/menu_divider2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/menu_order_layout"
        android:layout_marginLeft="50dp"
        android:background="@color/sg_divider_color"/>

    <LinearLayout
        android:id="@+id/menu_recommend_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/menu_divider2"
        android:background="@drawable/selector_ripple_item"
        android:onClick="menuClickListener">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_material"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_recommend_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_franchise_shop_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/menu_recommend_layout"
        android:background="@drawable/selector_ripple_item"
        android:onClick="menuClickListener">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_material"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_franchise_shop_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/menu_service_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/menu_franchise_shop_layout"
        android:background="@drawable/selector_ripple_item"
        android:onClick="menuClickListener">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_material"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_service_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_more_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@id/menu_service_layout"
        android:background="@drawable/selector_ripple_item"
        android:onClick="menuClickListener">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu_material"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_more_text"
            android:textSize="16sp"
            android:textColor="@color/f850_default_blue"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/menu_divider3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/menu_more_layout"
        android:layout_marginLeft="50dp"
        android:background="@color/sg_divider_color"/>

</RelativeLayout>